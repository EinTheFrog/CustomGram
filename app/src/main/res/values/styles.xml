<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme.ChatTitle">
        <item name="android:textColor">?colorAccent</item>
    </style>
    <style name="AppTheme.MessageFrom">
        <item name="android:textColor">?colorAccent</item>
    </style>
    <style name="AppTheme.Toolbar">
        <item name="contentScrim">?colorPrimaryDark</item>
        <item name="android:background">?colorPrimaryDark</item>
        <item name="android:textSize">22sp</item>
    </style>
    <style name="AppTheme.Message">
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/bg_message_shell</item>
    </style>

    <style name="TextAppearance.Customgram.Headline1"
        parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textSize">40sp</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="TextAppearance.Customgram.Headline6"
        parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="TextAppearance.Customgram.Body1"
        parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="TextAppearance.Customgram.Subtitle1"
        parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.roundedImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>