<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/expanded_info_constraint_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    app:layout_collapseMode="parallax">
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/toolbar_user_img"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:strokeColor="@null"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:id="@+id/toolbar_alt_user_img"
        android:autoSizeTextType="uniform"
        android:textAlignment="center"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="5dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintLeft_toLeftOf="@id/toolbar_user_img"
        app:layout_constraintRight_toRightOf="@id/toolbar_user_img"
        app:layout_constraintTop_toTopOf="@id/toolbar_user_img"
        app:layout_constraintBottom_toBottomOf="@id/toolbar_user_img"/>
    <TextView
        android:id="@+id/toolbar_user_name"
        android:textAppearance="?textAppearanceHeadline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>